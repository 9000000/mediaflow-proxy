# ==========================================
# Core Configuration
# ==========================================
# (Required) Password to protect API endpoints
API_PASSWORD=your_secure_password

# Logging level (INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO

# ==========================================
# UI & Features
# ==========================================
# Disable the home page UI (True/False)
DISABLE_HOME_PAGE=False

# Disable API documentation /docs (True/False)
DISABLE_DOCS=False

# Disable speedtest page /speedtest (True/False)
DISABLE_SPEEDTEST=False

# Enable streaming progress logging (True/False)
ENABLE_STREAMING_PROGRESS=False

# Clear all caches on startup (True/False) - Useful for dev
CLEAR_CACHE_ON_STARTUP=False

# ==========================================
# Networking & Proxy
# ==========================================
# Primary proxy URL (e.g., socks5://user:pass@proxy:1080 or http://proxy:8080)
PROXY_URL=

# Enable proxy for all routes by default (True/False)
ALL_PROXY=False

# Disable SSL verification globally (True/False) - NOT RECOMMENDED
DISABLE_SSL_VERIFICATION_GLOBALLY=False

# Request timeout in seconds
TIMEOUT=60

# Trusted IPs for forwarded headers (Default: 127.0.0.1)
FORWARDED_ALLOW_IPS=127.0.0.1

# Custom User-Agent for requests
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/136.0.0.0 Safari/537.36"

# Route configuration JSON (Advanced)
# TRANSPORT_ROUTES='{"https://example.com": {"proxy": false}}'

# ==========================================
# Stremio Integration
# ==========================================
# Stremio server URL for alternative proxying
STREMIO_PROXY_URL=

# M3U8 routing strategy: "mediaflow", "stremio", or "direct"
M3U8_CONTENT_ROUTING=mediaflow

# ==========================================
# HLS Optimizations (Pre-buffering)
# ==========================================
# Enable HLS pre-buffering (True/False)
ENABLE_HLS_PREBUFFER=False

# Number of segments to pre-buffer
HLS_PREBUFFER_SEGMENTS=5

# Max segments to keep in cache
HLS_PREBUFFER_CACHE_SIZE=50

# Max system memory usage (%) for HLS cache
HLS_PREBUFFER_MAX_MEMORY_PERCENT=80

# Emergency memory cleanup threshold (%)
HLS_PREBUFFER_EMERGENCY_THRESHOLD=90

# Inactivity timeout (seconds)
HLS_PREBUFFER_INACTIVITY_TIMEOUT=60

# Cache TTL for segments (seconds)
HLS_SEGMENT_CACHE_TTL=300

# ==========================================
# DASH Optimizations (Pre-buffering)
# ==========================================
# Enable DASH pre-buffering (True/False)
ENABLE_DASH_PREBUFFER=True

# Number of segments to pre-buffer
DASH_PREBUFFER_SEGMENTS=5

# Max segments to keep in cache
DASH_PREBUFFER_CACHE_SIZE=50

# Max system memory usage (%) for DASH cache
DASH_PREBUFFER_MAX_MEMORY_PERCENT=80

# Emergency memory cleanup threshold (%)
DASH_PREBUFFER_EMERGENCY_THRESHOLD=90

# Inactivity timeout (seconds)
DASH_PREBUFFER_INACTIVITY_TIMEOUT=60

# Cache TTL for segments (seconds)
DASH_SEGMENT_CACHE_TTL=60

# Live init segment TTL (seconds)
MPD_LIVE_INIT_CACHE_TTL=60

# Number of segments visible in live playlist
MPD_LIVE_PLAYLIST_DEPTH=8
